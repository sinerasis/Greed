{
    "manifest_version": 2,
    "name": "Greed",
    "description": "Greed necessitates bahavior modification.",
    "version": "2021.01.5.1",
    
    "options_page": "options.html",
    
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": true
    },

    "chrome_url_overrides": {
        "newtab": "blank.html"
    },

    "permissions": [
        "storage",
        "webRequest",
        "webRequestBlocking",
        
        "http://*.google.com/*",
        "https://*.google.com/*",
        "http://*.reddit.com/*",
        "https://*.reddit.com/*"
    ]
}
